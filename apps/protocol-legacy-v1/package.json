    "hardhat:local": "hardhat --network localhost",
    "hardhat:arbitrum": "hardhat --network arbitrum",
    "hardhat:avalanche": "hardhat --network avalanche",
    "local-fork:arbitrum": "hardhat node --fork https://arb-mainnet.g.alchemy.com/v2/Wpi5oKPY2NTrKdxCVlcqK3JrijSLHI7B --fork-block-number 60385740",
    "local-fork:deploy:gmx": "$PWD/scripts/deploys/localhost/gmx/deploy-localhost-fork.sh",
    "local-fork:test:gmx": "hardhat run --network localhost scripts/deploys/localhost/gmx/999-localhost-fork-test.ts",
    "local-fork:polygon": "hardhat node --fork https://polygon-mainnet.g.alchemy.com/v2/EHK2L-8KL6I43x26es3otJ2he4HHxhWy --fork-block-number 39751154",
    "local-fork:deploy:tetu": "$PWD/scripts/deploys/localhost/tetu/deploy-localhost-fork.sh",
    "local-fork:test:tetu": "hardhat run --network localhost scripts/deploys/localhost/tetu/999-localhost-fork-test.ts",

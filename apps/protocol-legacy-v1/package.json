    "local-fork:test:stakedao": "hardhat run --network localhost scripts/deploys/localhost/stakedao/999-localhost-fork-test.ts",
    "forge-test": "forge test",
    "forge-coverage": "forge coverage",
    "forge-coverage-html": "forge coverage --report lcov && genhtml lcov.info -o report --branch-coverage --legend"
  },
  "engines": {
    "node": "16.x"
  }
